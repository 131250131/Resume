extends ./layout.jade
include ../mixins/util.jade

block title
  title= resume_title

block style
  link(rel='stylesheet', href="index.css")

block header
  header.row
    .header-qrcode
      +responsive("qrcode", contact.wechat, "invisible-lt-sm")
    .title
      h1= name
      h2= job_description.join("/")
    address
      ul.contact
        +phone(contact.phone)
        +email(contact.email)
        +github(contact.github)
        +blog(contact.blog)
        +sinaweibo(contact.sinaweibo)
        +responsive("wechat", contact.wechat, "visible-lt-sm")

block content
  .content.row
    .column-5.first.column
      block education
      block language
      block experience
    .column-7.last.column
      block skills


block footer
  footer
    block repo


block sidebar
  aside
    block links
